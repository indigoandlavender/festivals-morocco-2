---
import { getLegalPages } from '../lib/sheets';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Discover festivals and music events in Morocco" } = Astro.props;
const currentPath = Astro.url.pathname;

// Fetch legal pages from Nexus at build time
let legalPages = [];
try {
  legalPages = await getLegalPages();
} catch (e) {
  // Fallback if fetch fails
  legalPages = [
    { label: "Terms", href: "/terms" },
    { label: "Privacy", href: "/privacy" },
    { label: "Disclaimer", href: "/disclaimer" }
  ];
}
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <meta name="description" content={description}>
  <link rel="canonical" href={`https://festivalsinmorocco.com${currentPath}`}>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Libre+Baskerville:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet">
  <style is:global>
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    :root {
      /* Typography */
      --font-sans: 'Inter', system-ui, -apple-system, sans-serif;
      --font-serif: 'Libre Baskerville', Georgia, serif;

      /* Backgrounds */
      --bg: #F7F5F2;
      --bg-card: #FFFFFF;
      --bg-hover: #F0EDE8;

      /* Text */
      --text: #2C2825;
      --text-muted: #6B665E;

      /* Borders */
      --border: #E3DFD9;

      /* Primary Accent */
      --accent: #4A6259;
      --accent-hover: #3D524A;
      --accent-contrast: #FFFFFF;

      /* Tradition Categories */
      --category-rooted: #4A6259;
      --category-rooted-bg: #EDF2EF;
      --category-hybrid: #5A6778;
      --category-hybrid-bg: #EBEEF2;
      --category-imported: #7A756E;
      --category-imported-bg: #F2F0ED;

      /* Status Indicators */
      --status-confirmed: #4A6259;
      --status-confirmed-bg: #EDF2EF;
      --status-announced: #5A6778;
      --status-announced-bg: #EBEEF2;
      --status-tentative: #8A7355;
      --status-tentative-bg: #F5F0E8;

      /* Sacred Indicator */
      --sacred: #7A5A50;
      --sacred-bg: #F3EEEB;
    }

    body {
      font-family: var(--font-sans);
      background: var(--bg);
      color: var(--text);
      line-height: 1.6;
      min-height: 100vh;
    }

    a {
      color: inherit;
      text-decoration: none;
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 1.5rem;
    }

    /* Header */
    header {
      border-bottom: 1px solid var(--border);
      padding: 1rem 0;
      position: sticky;
      top: 0;
      background: var(--bg);
      z-index: 100;
    }

    header .container {
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 2rem;
    }

    .logo {
      font-family: var(--font-serif);
      font-weight: 400;
      font-size: 1.25rem;
      white-space: nowrap;
    }

    nav {
      display: flex;
      gap: 1.5rem;
    }

    nav a {
      color: var(--text-muted);
      font-size: 0.9rem;
      transition: color 0.2s;
    }

    nav a:hover, nav a.active {
      color: var(--text);
    }

    /* Main content */
    main {
      padding: 2rem 0 4rem;
    }

    /* Footer - 3-level ombre */
    .footer-level-1 {
      background: #4A6259;
      padding: 2.5rem 0;
    }

    .footer-level-1 .container {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 1.5rem 3rem;
    }

    .footer-level-1 a {
      color: rgba(255, 255, 255, 0.7);
      font-size: 0.875rem;
      transition: color 0.2s;
    }

    .footer-level-1 a:hover {
      color: #fff;
    }

    .footer-level-2 {
      background: #3D524A;
      padding: 1.25rem 0;
    }

    .footer-level-2 .container {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 1rem 2rem;
    }

    .footer-level-2 a {
      color: rgba(255, 255, 255, 0.5);
      font-size: 0.75rem;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      transition: color 0.2s;
    }

    .footer-level-2 a:hover {
      color: rgba(255, 255, 255, 0.8);
    }

    .footer-level-3 {
      background: #2F403A;
      padding: 1rem 0;
    }

    .footer-level-3 .container {
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .footer-level-3 span,
    .footer-level-3 a {
      color: rgba(255, 255, 255, 0.35);
      font-size: 0.7rem;
    }

    .footer-level-3 a {
      transition: color 0.2s;
    }

    .footer-level-3 a:hover {
      color: rgba(255, 255, 255, 0.6);
    }
  </style>
</head>
<body>
  <header>
    <div class="container">
      <a href="/" class="logo">Festivals in Morocco</a>
      <nav>
        <a href="/events" class:list={[{ active: currentPath.startsWith('/events') }]}>Events</a>
        <a href="/traditions" class:list={[{ active: currentPath.startsWith('/traditions') }]}>Traditions</a>
        <a href="/cities" class:list={[{ active: currentPath.startsWith('/cities') }]}>Cities</a>
        <a href="/map" class:list={[{ active: currentPath === '/map' }]}>Map</a>
      </nav>
    </div>
  </header>

  <main>
    <div class="container">
      <slot />
    </div>
  </main>

  <footer>
    <div class="footer-level-1">
      <div class="container">
        <a href="/events">Events</a>
        <a href="/traditions">Traditions</a>
        <a href="/cities">Cities</a>
        <a href="/map">Map</a>
      </div>
    </div>
    <div class="footer-level-2">
      <div class="container">
        {legalPages.map(page => (
          <a href={page.href}>{page.label}</a>
        ))}
      </div>
    </div>
    <div class="footer-level-3">
      <div class="container">
        <span>Powered by <a href="https://slowmorocco.com" target="_blank" rel="noopener">Slow Morocco</a></span>
      </div>
    </div>
  </footer>
</body>
</html>
