---
import { getLegalPages, getSiteSettings, type SiteSettings } from '../lib/sheets';

interface Props {
  title: string;
  description?: string;
  image?: string;
  settings?: SiteSettings;
}

const { title, description = "Discover festivals and cultural events in Morocco", image, settings: passedSettings } = Astro.props;
const currentPath = Astro.url.pathname;

// Use passed settings or fetch defaults
const settings = passedSettings || await getSiteSettings();

// Fetch legal pages from Nexus at build time
let legalPages = [];
try {
  legalPages = await getLegalPages();
} catch (e) {
  legalPages = [
    { label: "Privacy Policy", href: "/privacy" },
    { label: "Terms of Service", href: "/terms" },
    { label: "Disclaimer", href: "/disclaimer" },
    { label: "Intellectual Property", href: "/intellectual-property" }
  ];
}
