---
import { getLegalPages, getSiteSettings, type SiteSettings } from '../lib/sheets';

interface Props {
  title: string;
  description?: string;
  image?: string;
  hideNewsletter?: boolean;
  settings?: SiteSettings;
}

const { title, description = "Discover festivals and music events in Morocco", image, hideNewsletter = false, settings: passedSettings } = Astro.props;
const currentPath = Astro.url.pathname;

// Use passed settings or fetch defaults
const settings = passedSettings || await getSiteSettings();

// Fetch legal pages from Nexus at build time
let legalPages = [];
try {
  legalPages = await getLegalPages();
} catch (e) {
  legalPages = [
    { label: "Privacy Policy", href: "/privacy" },
    { label: "Terms of Service", href: "/terms" },
    { label: "Disclaimer", href: "/disclaimer" },
    { label: "Intellectual Property", href: "/intellectual-property" }
  ];
}
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  <title>{title}</title>
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-C5M0G4CTG3"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', 'G-C5M0G4CTG3');
  </script>
  <meta name="description" content={description}>
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  {image && <meta property="og:image" content={image}>}
  <link rel="canonical" href={`https://festivalsinmorocco.com${currentPath}`}>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Libre+Baskerville:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet">
  <meta name="view-transition" content="same-origin">
  
  <style is:global>
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    :root {
      --font-sans: 'Inter', system-ui, -apple-system, sans-serif;
      --font-serif: 'Libre Baskerville', Georgia, serif;

      /* Warm Neutral Palette */
      --bg: #FAF8F5;
      --bg-warm: #F5F1EB;
      --bg-card: #FFFFFF;
      --bg-hover: #F0EDE8;

      --text: #2C2825;
      --text-muted: #6B665E;
      --text-light: #9A948A;

      --border: #E8E4DD;
      --border-light: #F0ECE6;

      /* Primary - Warm Sage */
      --accent: #5A6F5E;
      --accent-hover: #4A5C4D;
      --accent-light: #EDF2EE;
      --accent-contrast: #FFFFFF;

      /* Secondary - Terracotta */
      --terracotta: #B8705B;
      --terracotta-light: #F8F0ED;

      /* Categories */
      --category-rooted: #5A6F5E;
      --category-rooted-bg: #EDF2EE;
      --category-hybrid: #7A706A;
      --category-hybrid-bg: #F3F0ED;
      --category-imported: #6B7B8A;
      --category-imported-bg: #EEF1F4;

      /* Status */
      --status-confirmed: #5A6F5E;
      --status-confirmed-bg: #EDF2EE;
      --status-announced: #7A8A6B;
      --status-announced-bg: #F0F3ED;
      --status-tentative: #8A7A5A;
      --status-tentative-bg: #F5F2EB;

      --sacred: #8A5A50;
      --sacred-bg: #F5EFED;

      /* Footer Ombre */
      --footer-1: #5A6F5E;
      --footer-2: #4A5C4D;
      --footer-3: #3A4A3D;

      /* Shadows */
      --shadow-sm: 0 1px 2px rgba(44, 40, 37, 0.04);
      --shadow-md: 0 4px 12px rgba(44, 40, 37, 0.08);
      --shadow-lg: 0 8px 24px rgba(44, 40, 37, 0.12);

      --transition-fast: 150ms ease;
      --transition-base: 250ms ease;
      --transition-slow: 400ms ease;
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(8px); }
      to { opacity: 1; transform: translateY(0); }
    }

    ::view-transition-old(root) {
      animation: 200ms ease-out both fade-out;
    }
    ::view-transition-new(root) {
      animation: 300ms ease-out both fade-in;
    }
    @keyframes fade-out { to { opacity: 0; } }
    @keyframes fade-in { from { opacity: 0; } }

    body {
      font-family: var(--font-sans);
      background: var(--bg);
      color: var(--text);
      line-height: 1.6;
      min-height: 100vh;
      -webkit-font-smoothing: antialiased;
    }

    a { color: inherit; text-decoration: none; }
    img { max-width: 100%; height: auto; }

    .container {
      max-width: 1280px;
      margin: 0 auto;
      padding: 0 1.5rem;
    }

    h1, h2, h3 {
      font-family: var(--font-serif);
      font-weight: 400;
      line-height: 1.25;
    }

    /* Header */
    header {
      border-bottom: 1px solid var(--border);
      padding: 1.25rem 0;
      position: sticky;
      top: 0;
      background: rgba(250, 248, 245, 0.95);
      backdrop-filter: blur(12px);
      z-index: 100;
    }

    header .container {
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 2rem;
    }

    .logo {
      font-family: var(--font-serif);
      font-weight: 400;
      font-size: 1.125rem;
      letter-spacing: -0.01em;
    }

    nav {
      display: flex;
      gap: 2rem;
    }

    nav a {
      color: var(--text-muted);
      font-size: 0.875rem;
      letter-spacing: 0.02em;
      transition: color var(--transition-fast);
      position: relative;
    }

    nav a::after {
      content: '';
      position: absolute;
      bottom: -4px;
      left: 0;
      width: 0;
      height: 1px;
      background: var(--accent);
      transition: width var(--transition-base);
    }

    nav a:hover, nav a.active { color: var(--text); }
    nav a.active::after { width: 100%; }

    main {
      min-height: 60vh;
      animation: fadeIn 400ms ease-out;
    }

    main.with-padding {
      padding: 3rem 0 5rem;
    }

    /* ═══════════════════════════════════════════════════════════════
       FOOTER - 3-Level Ombre
       ═══════════════════════════════════════════════════════════════ */
    
    .footer-newsletter {
      background: var(--footer-1);
      padding: 4rem 0;
      position: relative;
    }

    .footer-newsletter::before {
      content: '';
      position: absolute;
      inset: 0;
      background: linear-gradient(135deg, rgba(255,255,255,0.03) 0%, transparent 50%);
      pointer-events: none;
    }

    .newsletter-overlay {
      position: absolute;
      inset: 0;
      background: rgba(90, 111, 94, 0.85);
      pointer-events: none;
    }

    .footer-newsletter .container {
      position: relative;
      text-align: center;
      max-width: 540px;
    }

    .footer-newsletter h3 {
      color: #fff;
      font-size: 1.75rem;
      margin-bottom: 0.75rem;
    }

    .footer-newsletter p {
      color: rgba(255, 255, 255, 0.6);
      font-size: 0.9rem;
      margin-bottom: 1.5rem;
    }

    .newsletter-form {
      display: flex;
      gap: 0.75rem;
      max-width: 400px;
      margin: 0 auto;
    }

    .newsletter-form input {
      flex: 1;
      padding: 0.875rem 1rem;
      background: rgba(255, 255, 255, 0.1);
      border: 1px solid rgba(255, 255, 255, 0.15);
      border-radius: 6px;
      color: #fff;
      font-size: 0.9rem;
    }

    .newsletter-form input::placeholder { color: rgba(255, 255, 255, 0.4); }
    .newsletter-form input:focus {
      outline: none;
      border-color: rgba(255, 255, 255, 0.4);
      background: rgba(255, 255, 255, 0.15);
    }

    .newsletter-form button {
      padding: 0.875rem 1.5rem;
      background: #fff;
      color: var(--footer-1);
      border: none;
      border-radius: 6px;
      font-size: 0.8rem;
      font-weight: 600;
      letter-spacing: 0.05em;
      text-transform: uppercase;
      cursor: pointer;
      transition: all var(--transition-fast);
    }

    .newsletter-form button:hover {
      background: rgba(255, 255, 255, 0.9);
      transform: translateY(-1px);
    }

    .footer-nav {
      background: var(--footer-2);
      padding: 2.5rem 0;
    }

    .footer-nav .container {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 1.5rem 3rem;
    }

    .footer-nav a {
      color: rgba(255, 255, 255, 0.65);
      font-size: 0.875rem;
      transition: color var(--transition-fast);
    }

    .footer-nav a:hover { color: #fff; }

    .footer-legal {
      background: var(--footer-3);
      padding: 1.25rem 0;
    }

    .footer-legal .container {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 0.75rem;
    }

    .legal-links {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 0.75rem 1.5rem;
    }

    .legal-links a {
      color: rgba(255, 255, 255, 0.4);
      font-size: 0.7rem;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      transition: color var(--transition-fast);
    }

    .legal-links a:hover { color: rgba(255, 255, 255, 0.7); }

    .footer-bottom {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      color: rgba(255, 255, 255, 0.3);
      font-size: 0.7rem;
    }

    .footer-bottom a {
      color: rgba(255, 255, 255, 0.4);
      transition: color var(--transition-fast);
    }

    .footer-bottom a:hover { color: rgba(255, 255, 255, 0.6); }

    /* ═══════════════════════════════════════════════════════════════
       UTILITY CLASSES
       ═══════════════════════════════════════════════════════════════ */

    .badge {
      display: inline-flex;
      align-items: center;
      gap: 0.35rem;
      padding: 0.35rem 0.75rem;
      border-radius: 100px;
      font-size: 0.7rem;
      font-weight: 500;
      letter-spacing: 0.03em;
      text-transform: uppercase;
    }

    .badge-accent { background: var(--accent-light); color: var(--accent); }
    .badge-terracotta { background: var(--terracotta-light); color: var(--terracotta); }
    .badge-sacred { background: var(--sacred-bg); color: var(--sacred); }
    .badge-outline { background: transparent; border: 1px solid var(--border); color: var(--text-muted); }

    .img-zoom { overflow: hidden; }
    .img-zoom img { transition: transform 600ms ease; }
    .img-zoom:hover img { transform: scale(1.05); }

    .card {
      background: var(--bg-card);
      border: 1px solid var(--border);
      border-radius: 12px;
      overflow: hidden;
      transition: all var(--transition-base);
    }

    .card:hover {
      border-color: var(--accent);
      box-shadow: var(--shadow-md);
      transform: translateY(-2px);
    }

    .section { padding: 4rem 0; }

    .section-header {
      display: flex;
      justify-content: space-between;
      align-items: flex-end;
      margin-bottom: 2rem;
    }

    .section-header h2 { font-size: 1.75rem; }

    .section-header .subtitle {
      color: var(--text-muted);
      font-size: 0.9rem;
      margin-top: 0.5rem;
    }

    .view-all {
      color: var(--text-muted);
      font-size: 0.85rem;
      display: inline-flex;
      align-items: center;
      gap: 0.35rem;
      transition: color var(--transition-fast);
    }

    .view-all:hover { color: var(--accent); }
    .view-all::after { content: '→'; transition: transform var(--transition-fast); }
    .view-all:hover::after { transform: translateX(3px); }

    @media (max-width: 768px) {
      nav { gap: 1.25rem; }
      nav a { font-size: 0.8rem; }
      .newsletter-form { flex-direction: column; }
      .footer-nav .container { gap: 1rem 2rem; }
    }
  </style>
</head>
<body>
  <header>
    <div class="container">
      <a href="/" class="logo">Festivals in Morocco</a>
      <nav>
        <a href="/events" class:list={[{ active: currentPath.startsWith('/events') }]}>Events</a>
        <a href="/traditions" class:list={[{ active: currentPath.startsWith('/traditions') }]}>Traditions</a>
        <a href="/cities" class:list={[{ active: currentPath.startsWith('/cities') }]}>Cities</a>
        <a href="/map" class:list={[{ active: currentPath === '/map' }]}>Map</a>
      </nav>
    </div>
  </header>

  <main class:list={[{ 'with-padding': !Astro.slots.has('hero') }]}>
    <slot name="hero" />
    <div class="container">
      <slot />
    </div>
  </main>

  <footer>
    {!hideNewsletter && (
      <div class="footer-newsletter" style={settings.newsletter_background_image ? `background: url(${settings.newsletter_background_image}) center/cover no-repeat;` : ''}>
        {settings.newsletter_background_image && <div class="newsletter-overlay"></div>}
        <div class="container">
          <h3>{settings.newsletter_title}</h3>
          <p>{settings.newsletter_description}</p>
          <form class="newsletter-form" action="/api/newsletter" method="POST">
            <input type="email" name="email" placeholder="your@email.com" required>
            <button type="submit">Subscribe</button>
          </form>
        </div>
      </div>
    )}
    <div class="footer-nav">
      <div class="container">
        <a href="/events">Events</a>
        <a href="/traditions">Traditions</a>
        <a href="/cities">Cities</a>
        <a href="/map">Map</a>
        <a href="/search">Search</a>
      </div>
    </div>
    <div class="footer-legal">
      <div class="container">
        <div class="legal-links">
          {legalPages.map(page => (
            <a href={page.href}>{page.label}</a>
          ))}
        </div>
        <div class="footer-bottom">
          <span>© {new Date().getFullYear()} Slow Morocco</span>
          <span>·</span>
          <span>Powered by <a href="https://slowmorocco.com" target="_blank" rel="noopener">Slow Morocco</a></span>
        </div>
      </div>
    </div>
  </footer>
</body>
</html>
