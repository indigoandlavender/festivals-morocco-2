---
import Base from '../../layouts/Base.astro';
import { getGenres, getEventsByGenre } from '../../lib/api';

const genres = getGenres();
---

<Base title="Genres - Festivals in Morocco">
  <div class="page-header">
    <h1>Genres</h1>
    <p class="subtitle">Browse events by music genre</p>
  </div>

  <div class="genres-grid">
    {genres.map(genre => {
      const events = getEventsByGenre(genre.name);
      const cities = [...new Set(events.map(e => e.city))].slice(0, 3);

      return (
        <a href={`/genres/${genre.slug}`} class="genre-card">
          <h2>{genre.name}</h2>
          <p class="event-count">{genre.count} event{genre.count !== 1 ? 's' : ''}</p>
          {cities.length > 0 && (
            <p class="genre-cities">{cities.join(', ')}</p>
          )}
        </a>
      );
    })}
  </div>
</Base>

<style>
  .page-header {
    margin-bottom: 2rem;
  }

  .page-header h1 {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
  }

  .subtitle {
    color: var(--text-muted);
  }

  .genres-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
    gap: 1rem;
  }

  .genre-card {
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: 12px;
    padding: 1.25rem;
    transition: border-color 0.2s, transform 0.2s;
  }

  .genre-card:hover {
    border-color: var(--accent);
    transform: translateY(-2px);
  }

  .genre-card h2 {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 0.375rem;
  }

  .event-count {
    color: var(--accent);
    font-size: 0.875rem;
    font-weight: 500;
    margin-bottom: 0.5rem;
  }

  .genre-cities {
    color: var(--text-muted);
    font-size: 0.8rem;
  }

  @media (max-width: 640px) {
    .page-header h1 {
      font-size: 2rem;
    }

    .genres-grid {
      grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
    }
  }
</style>
