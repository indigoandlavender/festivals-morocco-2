---
import Base from '../../layouts/Base.astro';
import { getGenres, getEventsByGenre, formatDateRange } from '../../lib/api';

export function getStaticPaths() {
  const genres = getGenres();
  return genres.map(genre => ({
    params: { slug: genre.slug },
    props: { genre }
  }));
}

const { genre } = Astro.props;
const events = getEventsByGenre(genre.name);

// Sort events by date
events.sort((a, b) => a.start_date.localeCompare(b.start_date));

// Get unique cities for this genre
const cities = [...new Set(events.map(e => e.city))];
---

<Base title={`${genre.name} Events - Festivals in Morocco`} description={`${genre.name} music events and festivals in Morocco`}>
  <nav class="breadcrumb">
    <a href="/">Home</a>
    <span>/</span>
    <a href="/genres">Genres</a>
    <span>/</span>
    <span>{genre.name}</span>
  </nav>

  <div class="page-header">
    <h1>{genre.name}</h1>
    <p class="subtitle">{events.length} event{events.length !== 1 ? 's' : ''} in Morocco</p>
  </div>

  {cities.length > 0 && (
    <div class="genre-cities">
      <span class="label">Cities:</span>
      {cities.map(city => {
        const citySlug = city.toLowerCase().replace(/\s+/g, '-');
        return (
          <a href={`/cities/${citySlug}`} class="city-link">
            {city}
          </a>
        );
      })}
    </div>
  )}

  <div class="events-grid">
    {events.map(event => (
      <a href={`/events/${event.slug}`} class="event-card">
        <div class="event-header">
          <span class="event-date">{formatDateRange(event.start_date, event.end_date)}</span>
          {event.is_verified && <span class="verified" title="Verified">âœ“</span>}
        </div>
        <h2>{event.name}</h2>
        <p class="event-location">{event.city}, {event.region}</p>
        {event.venue && <p class="event-venue">{event.venue}</p>}
        <div class="event-genres">
          {event.genres.filter(g => g !== genre.name).slice(0, 2).map(g => (
            <span class="genre-tag">{g}</span>
          ))}
        </div>
        <div class="event-footer">
          <span class="event-type">{event.event_type}</span>
          <span class="event-status" data-status={event.status}>{event.status}</span>
        </div>
      </a>
    ))}
  </div>

  {events.length === 0 && (
    <div class="no-results">
      <p>No events currently listed for {genre.name}.</p>
      <a href="/events" class="btn">Browse all events</a>
    </div>
  )}

  <nav class="back-nav">
    <a href="/genres">&larr; All genres</a>
  </nav>
</Base>

<style>
  .breadcrumb {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: var(--text-muted);
    margin-bottom: 2rem;
  }

  .breadcrumb a:hover {
    color: var(--accent);
  }

  .page-header {
    margin-bottom: 1.5rem;
  }

  .page-header h1 {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
  }

  .subtitle {
    color: var(--accent);
    font-weight: 500;
  }

  .genre-cities {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 2rem;
    padding: 1rem;
    background: var(--bg-card);
    border-radius: 8px;
  }

  .genre-cities .label {
    color: var(--text-muted);
    font-size: 0.875rem;
  }

  .city-link {
    color: var(--text);
    font-size: 0.875rem;
    padding: 0.25rem 0.75rem;
    border: 1px solid var(--border);
    border-radius: 100px;
    transition: border-color 0.2s;
  }

  .city-link:hover {
    border-color: var(--accent);
    color: var(--accent);
  }

  .events-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 1.5rem;
  }

  .event-card {
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: 12px;
    padding: 1.5rem;
    transition: border-color 0.2s, transform 0.2s;
  }

  .event-card:hover {
    border-color: var(--accent);
    transform: translateY(-2px);
  }

  .event-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.75rem;
  }

  .event-date {
    color: var(--accent);
    font-size: 0.875rem;
    font-weight: 500;
  }

  .verified {
    background: var(--accent);
    color: #000;
    width: 20px;
    height: 20px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.7rem;
  }

  .event-card h2 {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    line-height: 1.3;
  }

  .event-location {
    color: var(--text-muted);
    font-size: 0.9rem;
    margin-bottom: 0.25rem;
  }

  .event-venue {
    color: var(--text-muted);
    font-size: 0.85rem;
    margin-bottom: 0.75rem;
  }

  .event-genres {
    display: flex;
    flex-wrap: wrap;
    gap: 0.375rem;
    margin-bottom: 1rem;
    min-height: 1.5rem;
  }

  .genre-tag {
    background: var(--bg);
    padding: 0.25rem 0.625rem;
    border-radius: 100px;
    font-size: 0.75rem;
    color: var(--text-muted);
  }

  .event-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 0.75rem;
    border-top: 1px solid var(--border);
  }

  .event-type {
    font-size: 0.75rem;
    color: var(--text-muted);
    text-transform: capitalize;
  }

  .event-status {
    font-size: 0.75rem;
    padding: 0.2rem 0.5rem;
    border-radius: 4px;
    text-transform: capitalize;
  }

  .event-status[data-status="confirmed"] {
    background: rgba(34, 197, 94, 0.2);
    color: var(--accent);
  }

  .event-status[data-status="announced"] {
    background: rgba(59, 130, 246, 0.2);
    color: #60a5fa;
  }

  .no-results {
    text-align: center;
    padding: 3rem;
    color: var(--text-muted);
  }

  .no-results .btn {
    display: inline-block;
    margin-top: 1rem;
    padding: 0.75rem 1.5rem;
    background: var(--accent);
    color: #000;
    border-radius: 8px;
    font-weight: 600;
  }

  .back-nav {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--border);
  }

  .back-nav a {
    color: var(--text-muted);
    font-size: 0.9rem;
  }

  .back-nav a:hover {
    color: var(--accent);
  }

  @media (max-width: 640px) {
    .page-header h1 {
      font-size: 2rem;
    }

    .events-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
