---
import Base from '../../layouts/Base.astro';
import { getCities, getEventsByCity, MUSIC_TRADITIONS } from '../../lib/api';

const cities = getCities();

// Pre-compute traditions for each city
const citiesWithTraditions = cities.map(city => {
  const events = getEventsByCity(city.slug);
  const traditionCounts = new Map();

  events.forEach(event => {
    event.traditions.forEach(tid => {
      traditionCounts.set(tid, (traditionCounts.get(tid) || 0) + 1);
    });
  });

  const topTraditions = [...traditionCounts.entries()]
    .sort((a, b) => b[1] - a[1])
    .slice(0, 4)
    .map(([tid]) => MUSIC_TRADITIONS[tid])
    .filter(Boolean);

  return { ...city, topTraditions };
});
---

<Base title="Cities - Festivals in Morocco">
  <div class="page-header">
    <h1>Cities</h1>
    <p class="subtitle">Explore music events by city across Morocco</p>
  </div>

  <div class="cities-grid">
    {citiesWithTraditions.map(city => (
      <a href={`/cities/${city.slug}`} class="city-card">
        <h2>{city.name}</h2>
        <p class="region">{city.region}</p>
        <p class="event-count">{city.count} events</p>
        {city.topTraditions.length > 0 && (
          <div class="city-traditions">
            {city.topTraditions.map(tradition => (
              <span class="tradition-tag" data-category={tradition.category}>
                {tradition.name}
              </span>
            ))}
          </div>
        )}
      </a>
    ))}
  </div>
</Base>

<style>
  .page-header {
    margin-bottom: 2rem;
  }

  .page-header h1 {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
  }

  .subtitle {
    color: var(--text-muted);
  }

  .cities-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 1.5rem;
  }

  .city-card {
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: 12px;
    padding: 1.5rem;
    transition: border-color 0.2s, transform 0.2s;
  }

  .city-card:hover {
    border-color: var(--accent);
    transform: translateY(-2px);
  }

  .city-card h2 {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 0.25rem;
  }

  .region {
    font-size: 0.85rem;
    color: var(--text-muted);
    margin-bottom: 0.5rem;
  }

  .event-count {
    color: var(--accent);
    font-size: 0.9rem;
    font-weight: 500;
    margin-bottom: 1rem;
  }

  .city-traditions {
    display: flex;
    flex-wrap: wrap;
    gap: 0.375rem;
  }

  .tradition-tag {
    padding: 0.25rem 0.625rem;
    border-radius: 100px;
    font-size: 0.75rem;
  }

  .tradition-tag[data-category="rooted"] {
    background: rgba(34, 197, 94, 0.15);
    color: var(--accent);
  }

  .tradition-tag[data-category="hybrid"] {
    background: rgba(59, 130, 246, 0.15);
    color: #60a5fa;
  }

  .tradition-tag[data-category="imported"] {
    background: var(--bg);
    color: var(--text-muted);
  }

  @media (max-width: 640px) {
    .page-header h1 {
      font-size: 2rem;
    }

    .cities-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
