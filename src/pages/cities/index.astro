---
import Base from '../../layouts/Base.astro';
import { getCities, getEventsByCity } from '../../lib/api';

const cities = getCities();
---

<Base title="Cities - Festivals in Morocco">
  <div class="page-header">
    <h1>Cities</h1>
    <p class="subtitle">Explore music events by city across Morocco</p>
  </div>

  <div class="cities-grid">
    {cities.map(city => {
      const events = getEventsByCity(city.slug);
      const genres = [...new Set(events.flatMap(e => e.genres))].slice(0, 4);

      return (
        <a href={`/cities/${city.slug}`} class="city-card">
          <h2>{city.name}</h2>
          <p class="event-count">{city.count} event{city.count !== 1 ? 's' : ''}</p>
          {genres.length > 0 && (
            <div class="city-genres">
              {genres.map(genre => (
                <span class="genre-tag">{genre}</span>
              ))}
            </div>
          )}
        </a>
      );
    })}
  </div>
</Base>

<style>
  .page-header {
    margin-bottom: 2rem;
  }

  .page-header h1 {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
  }

  .subtitle {
    color: var(--text-muted);
  }

  .cities-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 1.5rem;
  }

  .city-card {
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: 12px;
    padding: 1.5rem;
    transition: border-color 0.2s, transform 0.2s;
  }

  .city-card:hover {
    border-color: var(--accent);
    transform: translateY(-2px);
  }

  .city-card h2 {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  .event-count {
    color: var(--accent);
    font-size: 0.9rem;
    font-weight: 500;
    margin-bottom: 1rem;
  }

  .city-genres {
    display: flex;
    flex-wrap: wrap;
    gap: 0.375rem;
  }

  .genre-tag {
    background: var(--bg);
    padding: 0.25rem 0.625rem;
    border-radius: 100px;
    font-size: 0.75rem;
    color: var(--text-muted);
  }

  @media (max-width: 640px) {
    .page-header h1 {
      font-size: 2rem;
    }

    .cities-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
