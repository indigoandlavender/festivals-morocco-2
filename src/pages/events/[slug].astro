    flex-direction: column;
    gap: 0.75rem;
  }

  .related-card {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 1.25rem;
    background: var(--bg-warm);
    border-radius: 8px;
    transition: all var(--transition-fast);
  }

  .related-card:hover {
    background: var(--accent-light);
  }

  .rc-title {
    font-weight: 500;
  }

  .rc-source {
    font-size: 0.8rem;
    color: var(--accent);
  }

  /* Historical */
