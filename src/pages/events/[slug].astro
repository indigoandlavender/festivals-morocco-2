    letter-spacing: 0.05em;
    color: var(--text);
  }

  .hdb-year {
    display: block;
    font-size: 0.75rem;
    color: var(--text-muted);
  }

  .photo-credit {
    position: absolute;
    bottom: 1rem;
    right: 1.5rem;
    font-size: 0.7rem;
    color: rgba(255,255,255,0.4);
  }

  /* ═══════════════════════════════════════════════════════════════
     MAIN CONTENT
     ═══════════════════════════════════════════════════════════════ */
