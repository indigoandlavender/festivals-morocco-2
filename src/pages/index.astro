---
import Base from '../layouts/Base.astro';
import {
  getUpcomingEvents,
  getFeaturedEvents,
  getCities,
  getTraditions,
  formatDateRange,
  formatLocation,
  EventTypeLabels,
  TraditionCategory,
  MUSIC_TRADITIONS
} from '../lib/api';

const featured = getFeaturedEvents().slice(0, 3);
const upcoming = getUpcomingEvents().slice(0, 6);
const cities = getCities().slice(0, 8);
const traditions = getTraditions();

const rootedTraditions = traditions.filter(t => t.category === TraditionCategory.ROOTED).slice(0, 6);
const hybridTraditions = traditions.filter(t => t.category === TraditionCategory.HYBRID).slice(0, 4);
---

<Base title="Festivals in Morocco - Music Events & Concerts">
  <section class="hero">
    <h1>Music in Morocco</h1>
    <p class="subtitle">Discover festivals, concerts, and musical traditions across Morocco</p>

    <form class="search-form" action="/events" method="GET">
      <input type="search" name="q" placeholder="Search events, traditions, cities..." autocomplete="off">
      <button type="submit">Search</button>
    </form>
  </section>

  <section class="featured">
    <div class="section-header">
      <h2>Featured Events</h2>
      <a href="/events" class="view-all">View all</a>
    </div>

    <div class="featured-grid">
      {featured.map(event => {
        const eventTraditions = event.traditions
          .map(tid => MUSIC_TRADITIONS[tid])
          .filter(Boolean);
        const hasSacred = eventTraditions.some(t => t.sacred);

        return (
          <a href={`/events/${event.slug}`} class="featured-card" data-weight={event.cultural_weight}>
            <div class="featured-content">
              <span class="date">{formatDateRange(event.timing)}</span>
              <h3>
                {event.name}
                {event.name_ar && <span class="name-local">{event.name_ar}</span>}
              </h3>
              <p class="location">{formatLocation(event.location)}</p>
              <div class="traditions">
                {eventTraditions.slice(0, 3).map(tradition => (
                  <span class="tradition-tag" data-category={tradition.category}>
                    {tradition.name}
                  </span>
                ))}
              </div>
            </div>
            <div class="card-badges">
              {event.is_verified && <span class="verified-badge" title="Verified">✓</span>}
              {hasSacred && <span class="sacred-badge" title="Features sacred tradition">◆</span>}
            </div>
          </a>
        );
      })}
    </div>
  </section>

  <section class="upcoming">
    <div class="section-header">
      <h2>Upcoming Events</h2>
      <a href="/events" class="view-all">View all</a>
    </div>

    <div class="events-list">
      {upcoming.map(event => {
        const startDate = event.timing.gregorian_start ? new Date(event.timing.gregorian_start) : null;
        const eventTraditions = event.traditions
          .map(tid => MUSIC_TRADITIONS[tid])
          .filter(Boolean);

        return (
          <a href={`/events/${event.slug}`} class="event-row">
            {startDate ? (
              <div class="event-date">
                <span class="day">{startDate.getDate()}</span>
                <span class="month">{startDate.toLocaleDateString('en-GB', { month: 'short' })}</span>
              </div>
            ) : (
              <div class="event-date">
                <span class="day">TBA</span>
              </div>
            )}
            <div class="event-info">
              <h3>{event.name}</h3>
              <p>
                {event.location.city || event.location.region}
                {eventTraditions.length > 0 && ` · ${eventTraditions.slice(0, 2).map(t => t.name).join(', ')}`}
              </p>
            </div>
            <span class="event-type">{EventTypeLabels[event.event_type]}</span>
          </a>
        );
      })}
    </div>
  </section>

  <div class="two-col">
    <section class="traditions-home">
      <div class="section-header">
        <h2>Rooted Traditions</h2>
        <a href="/traditions" class="view-all">View all</a>
      </div>
      <p class="section-desc">Ancestral music forms indigenous to Morocco</p>

      <div class="tag-list">
        {rootedTraditions.map(tradition => (
          <a href={`/traditions/${tradition.id}`} class="tag" data-sacred={tradition.sacred}>
            {tradition.name}
            {tradition.sacred && <span class="sacred-marker">◆</span>}
            <span class="count">{tradition.count}</span>
          </a>
        ))}
      </div>

      {hybridTraditions.length > 0 && (
        <>
          <h3 class="subsection-title">Contemporary</h3>
          <div class="tag-list">
            {hybridTraditions.map(tradition => (
              <a href={`/traditions/${tradition.id}`} class="tag hybrid">
                {tradition.name}
                <span class="count">{tradition.count}</span>
              </a>
            ))}
          </div>
        </>
      )}
    </section>

    <section class="cities">
      <div class="section-header">
        <h2>Cities</h2>
        <a href="/cities" class="view-all">View all</a>
      </div>
      <p class="section-desc">Events by location</p>

      <div class="tag-list">
        {cities.map(city => (
          <a href={`/cities/${city.slug}`} class="tag">
            {city.name} <span class="count">{city.count}</span>
          </a>
        ))}
      </div>
    </section>
  </div>
</Base>

<style>
  .hero {
    text-align: center;
    padding: 4rem 0;
  }

  .hero h1 {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
  }

  .subtitle {
    color: var(--text-muted);
    font-size: 1.25rem;
    margin-bottom: 2rem;
  }

  .search-form {
    display: flex;
    gap: 0.5rem;
    max-width: 500px;
    margin: 0 auto;
  }

  .search-form input {
    flex: 1;
    padding: 0.875rem 1.25rem;
    border: 1px solid var(--border);
    border-radius: 8px;
    background: var(--bg-card);
    color: var(--text);
    font-size: 1rem;
  }

  .search-form input:focus {
    outline: none;
    border-color: var(--accent);
  }

  .search-form button {
    padding: 0.875rem 1.5rem;
    background: var(--accent);
    color: var(--accent-contrast);
    border: none;
    border-radius: 8px;
    font-weight: 600;
    cursor: pointer;
    transition: background 0.2s;
  }

  .search-form button:hover {
    background: var(--accent-hover);
  }

  section {
    margin-bottom: 3rem;
  }

  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }

  .section-header h2 {
    font-size: 1.5rem;
    font-weight: 600;
  }

  .section-desc {
    color: var(--text-muted);
    font-size: 0.9rem;
    margin-bottom: 1rem;
  }

  .view-all {
    color: var(--text-muted);
    font-size: 0.9rem;
  }

  .view-all:hover {
    color: var(--accent);
  }

  .featured-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
  }

  .featured-card {
    position: relative;
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: 12px;
    padding: 1.5rem;
    transition: border-color 0.2s, transform 0.2s;
  }

  .featured-card:hover {
    border-color: var(--accent);
    transform: translateY(-2px);
  }

  .featured-card[data-weight="4"],
  .featured-card[data-weight="5"] {
    border-left: 3px solid var(--accent);
  }

  .featured-card .date {
    color: var(--accent);
    font-size: 0.875rem;
    font-weight: 500;
  }

  .featured-card h3 {
    font-size: 1.25rem;
    margin: 0.5rem 0;
  }

  .name-local {
    display: block;
    font-size: 1rem;
    font-weight: 400;
    color: var(--text-muted);
  }

  .featured-card .location {
    color: var(--text-muted);
    font-size: 0.9rem;
    margin-bottom: 1rem;
  }

  .traditions {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tradition-tag {
    padding: 0.25rem 0.75rem;
    border-radius: 100px;
    font-size: 0.75rem;
  }

  .tradition-tag[data-category="rooted"] {
    background: var(--category-rooted-bg);
    color: var(--category-rooted);
  }

  .tradition-tag[data-category="hybrid"] {
    background: var(--category-hybrid-bg);
    color: var(--category-hybrid);
  }

  .tradition-tag[data-category="imported"] {
    background: var(--category-imported-bg);
    color: var(--category-imported);
  }

  .card-badges {
    position: absolute;
    top: 1rem;
    right: 1rem;
    display: flex;
    gap: 0.375rem;
  }

  .verified-badge {
    background: var(--accent);
    color: var(--accent-contrast);
    width: 24px;
    height: 24px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.75rem;
  }

  .sacred-badge {
    background: var(--sacred);
    color: var(--accent-contrast);
    width: 24px;
    height: 24px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.65rem;
  }

  .events-list {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .event-row {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    padding: 1rem 1.25rem;
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: 8px;
    transition: border-color 0.2s;
  }

  .event-row:hover {
    border-color: var(--text-muted);
  }

  .event-date {
    text-align: center;
    min-width: 50px;
  }

  .event-date .day {
    display: block;
    font-size: 1.5rem;
    font-weight: 700;
    line-height: 1;
  }

  .event-date .month {
    display: block;
    font-size: 0.75rem;
    color: var(--text-muted);
    text-transform: uppercase;
  }

  .event-info {
    flex: 1;
  }

  .event-info h3 {
    font-size: 1rem;
    font-weight: 500;
    margin-bottom: 0.25rem;
  }

  .event-info p {
    font-size: 0.875rem;
    color: var(--text-muted);
  }

  .event-type {
    font-size: 0.75rem;
    color: var(--text-muted);
    background: var(--bg);
    padding: 0.25rem 0.75rem;
    border-radius: 4px;
  }

  .two-col {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
  }

  .subsection-title {
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--text-muted);
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
  }

  .tag-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: 100px;
    font-size: 0.9rem;
    transition: border-color 0.2s;
  }

  .tag:hover {
    border-color: var(--accent);
  }

  .tag[data-sacred="true"] {
    border-color: var(--sacred);
  }

  .tag.hybrid {
    border-color: var(--category-hybrid);
  }

  .sacred-marker {
    color: var(--sacred);
    font-size: 0.7rem;
  }

  .tag .count {
    color: var(--text-muted);
    font-size: 0.8rem;
  }

  @media (max-width: 640px) {
    .hero h1 {
      font-size: 2rem;
    }

    .subtitle {
      font-size: 1rem;
    }

    .search-form {
      flex-direction: column;
    }

    .event-row {
      flex-wrap: wrap;
    }

    .event-type {
      margin-left: auto;
    }
  }
</style>
