---
import Base from '../../layouts/Base.astro';
import {
  getTraditions,
  getEventsByTradition,
  formatDateRange,
  formatLocation,
  EventTypeLabels,
  TraditionCategory,
  TraditionCategoryLabels,
  MUSIC_TRADITIONS
} from '../../lib/api';

export function getStaticPaths() {
  const traditions = getTraditions();
  return traditions.map(tradition => ({
    params: { id: tradition.id },
    props: { tradition }
  }));
}

const { tradition } = Astro.props;
const fullTradition = MUSIC_TRADITIONS[tradition.id];
const events = getEventsByTradition(tradition.id);

// Sort events by cultural weight then date
events.sort((a, b) => {
  if (a.cultural_weight !== b.cultural_weight) return b.cultural_weight - a.cultural_weight;
  return (a.timing.gregorian_start || '').localeCompare(b.timing.gregorian_start || '');
});

const categoryLabel = TraditionCategoryLabels[tradition.category];
---

<Base
  title={`${tradition.name} - Music Traditions in Morocco`}
  description={fullTradition?.description || `Events featuring ${tradition.name} music in Morocco`}
>
  <nav class="breadcrumb">
    <a href="/">Home</a>
    <span>/</span>
    <a href="/traditions">Traditions</a>
    <span>/</span>
    <span>{tradition.name}</span>
  </nav>

  <div class="page-header">
    <div class="tradition-meta">
      <span class="category-badge" data-category={tradition.category}>{categoryLabel}</span>
      {tradition.sacred && <span class="sacred-badge">Sacred Tradition</span>}
    </div>

    <h1>
      {tradition.name}
      {fullTradition?.name_ar && <span class="name-local">{fullTradition.name_ar}</span>}
      {fullTradition?.name_tzm && <span class="name-local">{fullTradition.name_tzm}</span>}
    </h1>

    <p class="subtitle">{events.length} event{events.length !== 1 ? 's' : ''} featuring this tradition</p>
  </div>

  {fullTradition?.description && (
    <div class="description-card">
      <p>{fullTradition.description}</p>
      {fullTradition.regions && fullTradition.regions.length > 0 && (
        <p class="regions">
          <strong>Regions:</strong> {fullTradition.regions.join(', ')}
        </p>
      )}
    </div>
  )}

  <div class="events-grid">
    {events.map(event => {
      const eventTraditions = event.traditions
        .map(tid => MUSIC_TRADITIONS[tid])
        .filter(Boolean)
        .filter(t => t.id !== tradition.id);

      return (
        <a href={`/events/${event.slug}`} class="event-card" data-weight={event.cultural_weight}>
          <div class="event-header">
            <span class="event-date">{formatDateRange(event.timing)}</span>
            {event.is_verified && <span class="verified" title="Verified">âœ“</span>}
          </div>
          <h2>{event.name}</h2>
          <p class="event-location">{formatLocation(event.location)}</p>
          {eventTraditions.length > 0 && (
            <div class="other-traditions">
              <span class="label">Also featuring:</span>
              {eventTraditions.slice(0, 2).map(t => (
                <span class="other-tag">{t.name}</span>
              ))}
            </div>
          )}
          <div class="event-footer">
            <span class="event-type">{EventTypeLabels[event.event_type]}</span>
            <span class="event-status" data-status={event.status}>{event.status}</span>
          </div>
        </a>
      );
    })}
  </div>

  {events.length === 0 && (
    <div class="no-results">
      <p>No events currently listed featuring {tradition.name}.</p>
      <a href="/events" class="btn">Browse all events</a>
    </div>
  )}

  <nav class="back-nav">
    <a href="/traditions">&larr; All traditions</a>
  </nav>
</Base>

<style>
  .breadcrumb {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: var(--text-muted);
    margin-bottom: 2rem;
  }

  .breadcrumb a:hover {
    color: var(--accent);
  }

  .page-header {
    margin-bottom: 2rem;
  }

  .tradition-meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
  }

  .category-badge {
    font-size: 0.75rem;
    padding: 0.25rem 0.75rem;
    border-radius: 4px;
  }

  .category-badge[data-category="rooted"] {
    background: var(--category-rooted-bg);
    color: var(--category-rooted);
  }

  .category-badge[data-category="hybrid"] {
    background: var(--category-hybrid-bg);
    color: var(--category-hybrid);
  }

  .category-badge[data-category="imported"] {
    background: var(--category-imported-bg);
    color: var(--category-imported);
  }

  .sacred-badge {
    font-size: 0.75rem;
    background: var(--sacred);
    color: var(--accent-contrast);
    padding: 0.25rem 0.75rem;
    border-radius: 4px;
  }

  .page-header h1 {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
  }

  .name-local {
    display: block;
    font-size: 1.5rem;
    font-weight: 400;
    color: var(--text-muted);
  }

  .subtitle {
    color: var(--accent);
    font-weight: 500;
  }

  .description-card {
    padding: 1.5rem;
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: 12px;
    margin-bottom: 2rem;
  }

  .description-card p {
    line-height: 1.7;
  }

  .regions {
    margin-top: 1rem;
    font-size: 0.9rem;
    color: var(--text-muted);
  }

  .regions strong {
    color: var(--text);
  }

  .events-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 1.5rem;
  }

  .event-card {
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: 12px;
    padding: 1.5rem;
    transition: border-color 0.2s, transform 0.2s;
  }

  .event-card:hover {
    border-color: var(--accent);
    transform: translateY(-2px);
  }

  .event-card[data-weight="4"],
  .event-card[data-weight="5"] {
    border-left: 3px solid var(--accent);
  }

  .event-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.75rem;
  }

  .event-date {
    color: var(--accent);
    font-size: 0.875rem;
    font-weight: 500;
  }

  .verified {
    background: var(--accent);
    color: var(--accent-contrast);
    width: 20px;
    height: 20px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.7rem;
  }

  .event-card h2 {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    line-height: 1.3;
  }

  .event-location {
    color: var(--text-muted);
    font-size: 0.9rem;
    margin-bottom: 0.75rem;
  }

  .other-traditions {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 0.375rem;
    margin-bottom: 1rem;
  }

  .other-traditions .label {
    font-size: 0.75rem;
    color: var(--text-muted);
  }

  .other-tag {
    font-size: 0.7rem;
    padding: 0.2rem 0.5rem;
    background: var(--bg);
    border-radius: 100px;
    color: var(--text-muted);
  }

  .event-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 0.75rem;
    border-top: 1px solid var(--border);
  }

  .event-type {
    font-size: 0.75rem;
    color: var(--text-muted);
  }

  .event-status {
    font-size: 0.75rem;
    padding: 0.2rem 0.5rem;
    border-radius: 4px;
    text-transform: capitalize;
  }

  .event-status[data-status="confirmed"] {
    background: var(--status-confirmed-bg);
    color: var(--status-confirmed);
  }

  .event-status[data-status="announced"] {
    background: var(--status-announced-bg);
    color: var(--status-announced);
  }

  .no-results {
    text-align: center;
    padding: 3rem;
    color: var(--text-muted);
  }

  .no-results .btn {
    display: inline-block;
    margin-top: 1rem;
    padding: 0.75rem 1.5rem;
    background: var(--accent);
    color: var(--accent-contrast);
    border-radius: 8px;
    font-weight: 600;
  }

  .back-nav {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--border);
  }

  .back-nav a {
    color: var(--text-muted);
    font-size: 0.9rem;
  }

  .back-nav a:hover {
    color: var(--accent);
  }

  @media (max-width: 640px) {
    .page-header h1 {
      font-size: 2rem;
    }

    .events-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
